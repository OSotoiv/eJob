{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Job schema",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1
        },
        "salary": {
            "type": "integer",
            "minimum": 0
        },
        "equity": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
        },
        "companyHandle": {
            "type": "string",
            "minLength": 1
        }
    },
    "additionalProperties": false,
    "required": [
        "title",
        "salary",
        "equity",
        "companyHandle"
    ]
}